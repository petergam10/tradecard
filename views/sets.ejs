<!-- home.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sets</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>

<body>

    <%- include('partials/header') %>

        <h1>SETS PAGE</h1>
        <p class="h5">
            List of Sets
            <a href="/filter?sort=name">Name</a> |
            <a href="/filter?sort=cardCountTotal">Card Count Total</a>
        </p>
        <hr>

        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                <% setlist.forEach((set)=> { %>
                    <div class="col mb-4">
                        <div class="card h-100">
                            <img src="<%= set.logo %>" class="card-img-max-height" alt="<%= set.name %> Logo">
                            <div class="card-body d-flex flex-column justify-content-between">
                                <h5 class="card-title">
                                    <%= set.name %>
                                </h5>
                                <p class="card-text">Total Cards: <%= set.cardCountTotal %></p>
                                <a href="#" class="btn btn-primary mt-auto">View Set</a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
        </div>
        
        <%- include('partials/footer') %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>
</body>

</html>