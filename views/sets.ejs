<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sets</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Add the following style section for card images -->
    <style>
        .card-img {
            height: 70px;
            /* Adjust the height as needed */
            object-fit: fill;
            /* Ensure the image covers the entire space */
        }

        .symbol-img {
            height: 35px;
            /* Adjust the height as needed */
            object-fit: fill;
            /* Ensure the image covers the entire space */
        }
    </style>
</head>

<body>

    <%- include('partials/header') %>

        <h1>SETS PAGE</h1>
        <h3>202 Expansions</h3>
        <hr>

        <!-- Search bar with filter retention -->
        <form action="/sets" method="GET">
            <label for="search">Search for sets:</label>
            <input type="text" id="search" name="query" value="<%= currentQuery %>">

            <!-- Hidden input field to retain filter -->
            <input type="hidden" name="sort" value="<%= currentSort %>">
            <input type="hidden" name="order" value="<%= currentOrder %>">

            <button type="submit">Search</button>
        </form>

        <div class="row">
            <div class="col-md-auto">
                <label for="sortBy" class="form-label">Sort by:</label>
                <select class="form-select" id="sortBy" aria-label="Default select example">
                    <option value="name">Name</option>
                    <option value="series_ID">Series</option>
                    <option value="releaseDate">Release Date</option>
                </select>
            </div>
            <div class="col-md-auto">
                <label for="sortOrder" class="form-label">Order:</label>
                <select class="form-select" id="sortOrder" aria-label="Default select example">
                    <option value="asc">Ascending</option>
                    <option value="desc">Descending</option>
                </select>
            </div>
        </div>

        <hr>

        <div class="container">
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                <% setlist.forEach((set)=> { %>
                    <div class="col mb-4">
                        <div class="card h-100">
                            <div class="card-header d-flex justify-content-between align-items-center">
                                <div class="d-flex pr-3 align-items-center">
                                    <% if (set.symbol) { %>
                                        <img src="<%= set.symbol %>" alt="Symbol" class="symbol-img mr-2">
                                        <% } %>
                                            <h5 class="card-title mb-0 pr-3">
                                                <%= set.name %>
                                            </h5>
                                </div>
                            </div>
                            <div class="card-img-wrapper p-3">
                                <img src="<%= set.logo %>" class="card-img card-img-max-height"
                                    alt="<%= set.name %> Logo">
                            </div>
                            <div class="card-body d-flex flex-column justify-content-between">
                                <p class="card-text">
                                    <span>Total Cards: <%= set.cardCountTotal %></span><br>
                                    <span>Release Date: <%= set.releaseDate %></span>
                                </p>
                                <!-- Inside the card body in sets.ejs -->
                                <a href="/sets/<%= set.id %>" class="btn btn-primary mt-auto">View Set</a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>

        <%- include('partials/footer') %>

            <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
            <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
            <!-- Bootstrap Bundle with Popper.js -->
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>

            <script>
                $(document).ready(function () {
                    const urlParams = new URLSearchParams(window.location.search);
                    const initialSort = urlParams.get('sort');
                    const initialOrder = urlParams.get('order');
                    const initialQuery = urlParams.get('query'); // Get initial query value

                    $('#sortBy').val(initialSort);
                    $('#sortOrder').val(initialOrder);
                    $('#search').val(initialQuery); // Set initial query value in the search box

                    $('#sortBy').change(function () {
                        const sortBy = $(this).val();
                        const currentOrder = $('#sortOrder').val();
                        const currentQuery = $('#search').val(); // Get current query value
                        window.location.search = `?sort=${sortBy}&order=${currentOrder}&query=${currentQuery}`; // Include query in URL
                    });

                    $('#sortOrder').change(function () {
                        const currentSort = $('#sortBy').val();
                        const sortOrder = $(this).val();
                        const currentQuery = $('#search').val(); // Get current query value
                        window.location.search = `?sort=${currentSort}&order=${sortOrder}&query=${currentQuery}`; // Include query in URL
                    });
                });
            </script>

</body>

</html>