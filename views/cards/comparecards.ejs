<!-- home.ejs -->
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Card Comparison</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
        <link rel="stylesheet" href="/css/styles.css">
</head>

<body>

    <%- include('../partials/header.ejs') %>

        <header class="mt-3">
            <div class="container">
                <p class="fs-2">Card Comparison</p>
            </div>
        </header>

        <main class="my-3">
            <div class="container">

                <form action="/cards/compare-cards" method="POST">
                    <label for="card1">Card 1 ID:</label>
                    <input type="text" id="card1" name="card1" required><br><br>

                    <label for="card2">Card 2 ID:</label>
                    <input type="text" id="card2" name="card2" required><br><br>

                    <button class="btn btn-primary" type="submit">Compare</button>
                </form>

                <!-- Display images of the cards -->
                <div class="row mt-4">
                    <% if (cards && cards.length> 0) { %>
                        <% cards.forEach(card=> { %>
                            <div class="col-md-6 mb-4">
                                <div class="card">
                                    <img src="<%= card.image %>" class="card-img-top" alt="Card Image">
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <%= card.name %>
                                        </h5>
                                        <p class="card-text">
                                            <%= card.description %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <% }) %>
                                <% } else { %>
                                    <p>No cards to display</p>
                                    <% } %>
                </div>

            </div>
        </main>

        <%- include('../partials/footer.ejs') %>

            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>
</body>

</html>