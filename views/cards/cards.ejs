<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sets</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Add the following style section for card images -->
    <style>
        .card-img {
            height: 250px;
            /* Adjust the height as needed */
            object-fit: fill;
            /* Ensure the image covers the entire space */
        }

        .symbol-img {
            height: 35px;
            /* Adjust the height as needed */
            object-fit: fill;
            /* Ensure the image covers the entire space */
        }
    </style>
</head>

<body>

    <%- include('../partials/header.ejs') %>

        <header class="mt-3">
            <div class="container">
                <p class="fs-2">Sign-In</p>
            </div>
        </header>

        <div class="container">

            <!-- Search bar with filter retention -->
            <form action="/sets" method="GET" class="d-flex">
                <input class="form-control me-2" type="text" id="search" name="query" placeholder="Search for sets"
                    value="">

                <!-- Hidden input field to retain filter -->
                <input type="hidden" name="sort" value="">
                <input type="hidden" name="order" value="">

                <button class="btn btn-outline-success" type="submit">Search</button>
            </form>

            <h4 id="setsCount"></h4>

            <!-- Filters -->
            <div class="row">
                <!-- Sort By -->
                <div class="col-md-auto d-flex align-items-center">
                    <label for="sortBy" class="form-label me-3">Sort by:</label>
                    <select class="form-select" id="sortBy" aria-label="Default select example">
                        <option value="name" selected>Name</option>
                        <option value="series_ID">Series</option>
                        <option value="releaseDate">Release Date</option>
                    </select>
                </div>

                <!-- Order by -->
                <div class="col-md-auto d-flex align-items-center">
                    <label for="sortOrder" class="form-label me-3">Order:</label>
                    <select class="form-select" id="sortOrder" aria-label="Default select example">
                        <option value="asc" selected>Ascending</option> <!-- Default option -->
                        <option value="desc">Descending</option>
                    </select>
                </div>

            </div>

            <hr>

            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
                <% cardsList.slice(0, limit).forEach((card)=> { %>
                    <div class="col">
                        <div class="card h-100">
                            <div class="card-img-wrapper p-3">
                                <% if (card.image) { %>
                                    <img src="<%= card.image %>" class="card-img card-img-max-height"
                                        alt="<%= card.image %> Logo">
                                    <% } %>
                            </div>
                            <div class="card-body d-flex flex-column justify-content-between">
                                <p class="card-text">

                                </p>
                                <!-- Inside the card body in sets.ejs -->
                                <a href="/cards/<%= card.id %>" class="btn btn-primary mt-auto">View Card</a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>

        <%- include('../partials/footer.ejs') %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
                crossorigin="anonymous"></script>
</body>

</html>