<!-- This renders an individual card -->
<!-- {card, userCollection} -->

<link rel="stylesheet" href="/css/styles.css">

<div class="card-container">

    <a href="/cards/<%= card.id %>">
        <img src="<%= card.image %>" class="card-img-custom-2" alt="<%= card.image %> Logo">
    </a>

    <div>

        <div class="d-flex justify-content-around align-items-center">
            <div>
                <% if (card.rarity==="Common" ) { %>
                    <img src="\images\card_rarity\common.svg" alt="Common Card">
                    <% } else if (card.rarity==="Double Rare" ) { %>
                        <img src="\images\card_rarity\double rare.svg" alt="Double Rare Card">
                        <% } else if (card.rarity==="Rare Holo" ) { %>
                            <img src="\images\card_rarity\rare holo.svg" alt="Rare Holo Card">
                            <% } else if (card.rarity==="Rare" ) { %>
                                <img src="\images\card_rarity\rare.svg" alt="Rare Card">
                                <% } else if (card.rarity==="Uncommon" ) { %>
                                    <img src="\images\card_rarity\uncommon.svg" alt="Uncommon Card">
                                    <% } else { %>
                                        <!-- Default image for other rarities -->
                                        <img src="\images\card_rarity\else.svg" alt="Default Card">
                                        <% } %>
            </div>
            <div class="fw-medium">
                    <%= card.name %>
            </div>
            <div>
                <%= card.id %>
            </div>
        </div>

        <% if (user) { %>
            <div class="buttons-container d-flex justify-content-evenly" data-cardid="<%= card.id %>">
                <% if (userCollection.includes(card.id)) { %>
                    <button class="btn btn-outline-danger remove-from-collection-btn" data-cardid="<%= card.id %>">
                        Remove from collection
                    </button>
                    <% } else { %>
                        <button class="btn btn-outline-success add-to-collection-btn" data-cardid="<%= card.id %>">
                            Add to collection
                        </button>
                        <% } %>
            </div>

            <div class="buttons-container d-flex justify-content-evenly mt-2">
                <% if (userWishlist.includes(card.id)) { %>
                    <button class="btn btn-outline-danger remove-from-wishlist-btn" data-cardid="<%= card.id %>">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-heart-fill" viewBox="0 0 16 16">
                            <path fill-rule="evenodd"
                                d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314" />
                        </svg>
                    </button>
                    <% } else { %>
                        <button class="btn btn-outline-success add-to-wishlist-btn" data-cardid="<%= card.id %>">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                class="bi bi-heart" viewBox="0 0 16 16">
                                <path
                                    d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143q.09.083.176.171a3 3 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15" />
                            </svg>
                        </button>
                        <% } %>

            </div>
            <% } %>

    </div>

</div>